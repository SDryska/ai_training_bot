# Telegram Bot
BOT_TOKEN=your_bot_token_here

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/emco_bot_db

# Authentication
AUTH_PASSWORD_USER=user_password_here
AUTH_PASSWORD_ADMIN=admin_password_here

# AI Providers
OPENAI_API_KEY=sk-your-openai-key
GEMINI_API_KEY=your-gemini-key

# Backend (optional)
BACKEND_BASE_URL=https://api.example.com
BACKEND_TIMEOUT=10.0
BACKEND_MAX_RETRIES=3

# Webhook (for production)
WEBHOOK_ENABLED=false
WEBHOOK_HOST=https://your-domain.ru
WEBHOOK_PATH=/webhook
WEBHOOK_PORT=80

# Metrics & Monitoring
METRICS_PORT=8000
SENTRY_DSN=
SENTRY_ENV=dev

# Scheduler
APSCHEDULER_TIMEZONE=UTC

# Google Sheets Export
SHEETS_EXPORT_ENABLED=false
GSPREAD_SERVICE_ACCOUNT_FILE=gsa.json
GSHEETS_SPREADSHEET_ID=your_spreadsheet_id
GSHEETS_SPREADSHEET_NAME=your_spreadsheet_name
GSHEETS_SHARE_WITH=email1@example.com,email2@example.com

# Text Validation
TEXT_MAX_LENGTH=4000
TEXT_MAX_LINES=50
TEXT_MIN_LENGTH=1

# Voice Validation
VOICE_MAX_SIZE_MB=25.0
VOICE_MAX_DURATION_SEC=300
VOICE_MIN_DURATION_SEC=0.5

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=20
MAX_REQUESTS_PER_HOUR=100
